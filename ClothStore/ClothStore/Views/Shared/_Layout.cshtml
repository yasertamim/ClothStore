@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    var user =await UserManager.GetUserAsync(User);
  
   

   
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClothStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClothStore.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ClothStore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">

                            @if (user != null)
                            {
                                var roles = UserManager.GetRolesAsync(user);
                                if (roles.Result.Contains("Admin"))
                                {
                                    <a class="nav-link text-dark" asp-route-id="menn" asp-area="" asp-controller="Admin" asp-action="Index" style="font-family:'Times New Roman'">Men</a>
                                }
                                else
                                {
                                    <a class="nav-link text-dark" asp-route-id="menn" asp-area="" asp-controller="Customer" asp-action="Index" style="font-family:'Times New Roman'">Men</a>
                                }
                              

                            }
                           
                        
                         

                        </li>
                        <li class="nav-item">
                            @if (user != null)
                            {
                                var roles = UserManager.GetRolesAsync(user);
                                if (roles.Result.Contains("Admin"))
                                {
                                    <a class="nav-link text-dark" asp-route-id="women" asp-area="" asp-controller="Admin" asp-action="Index" style="font-family:'Times New Roman'">Women</a>
                                }
                                else
                                {
                                    <a class="nav-link text-dark" asp-route-id="women" asp-area="" asp-controller="Customer" asp-action="Index" style="font-family:'Times New Roman'">Women</a>
                                }


                            }

                           
                        </li>
                        <li class="nav-item">
                            @if (user != null)
                            {
                                var roles = UserManager.GetRolesAsync(user);
                                if (roles.Result.Contains("Admin"))
                                {
                                    <a class="nav-link text-dark" asp-route-id="babies" asp-area="" asp-controller="Admin" asp-action="Index" style="font-family:'Times New Roman'">Kids</a>
                                }
                                else
                                {
                                    <a class="nav-link text-dark" asp-route-id="babies" asp-area="" asp-controller="Customer" asp-action="Index" style="font-family:'Times New Roman'">Kids</a>
                                }


                            }

                            
                        </li>
                        <li class="nav-item">
                            @if (user != null)
                            {
                                var roles = UserManager.GetRolesAsync(user);
                                if (roles.Result.Contains("Admin"))
                                {
                                    <a class="nav-link text-dark" asp-route-id="accessories" asp-area="" asp-controller="Admin" asp-action="Index" style="font-family:'Times New Roman'">Accessories</a>
                                }
                                else
                                {
                                    <a class="nav-link text-dark" asp-route-id="accessories" asp-area="" asp-controller="Customer" asp-action="Index" style="font-family:'Times New Roman'">Accessories</a>
                                }


                            }

                            
                        </li>

                        <li class="nav-item">

                            @if (user != null)
                            {
                                var roles = UserManager.GetRolesAsync(user);
                                if (roles.Result.Contains("Admin"))
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="UserOrders" style="font-family:'Times New Roman'">Orders</a>
                                }
                                else
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Orders" style="font-family:'Times New Roman'">My orders</a>
                                }


                            }
                           
                        </li>
                        <li class="nav-item">

                            @if (user != null)
                            {
                                var roles = UserManager.GetRolesAsync(user);
                                if (roles.Result.Contains("Admin"))
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Create" style="font-family:'Times New Roman'">Add Item</a>
                                }
                               


                            }

                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ClothStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
